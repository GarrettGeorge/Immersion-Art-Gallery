<%- title "Login" %>


<div id="loginpage__initContainer">
  <a id="back" href=".">< Back to Gallery</a>
  <div id="loginpage__central">
    <div id="loginpage__logo"></div>
    <div>Welcome</div>
    <%= form_tag :action => :submit do %>

    <%= text_field_tag :user, nil, placeholder: "Username" %><br>

    <%= password_field_tag :password, nil, placeholder: "Password" %><br>

    <%= submit_tag 'Login'%>

    <% end %>
  </div>
</div>
